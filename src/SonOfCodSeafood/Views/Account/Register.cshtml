@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using SonOfCodSeafood.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  
    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { placeholder = "Email" })
    @Html.ValidationMessageFor(m => m.Email)

   
    @Html.PasswordFor(m => m.Password, htmlAttributes: new { placeholder = "password" })

   
    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "confirme password" })
    @Html.ValidationMessageFor(m => m.ConfirmPassword)

    <input type="submit" value="Register" />
}