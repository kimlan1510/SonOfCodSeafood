@using System.Security.Claims
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SonOfCodSeafood.Models.NewsLetter
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://weneedfun.com/wp-content/uploads/2016/08/Boat-Ocean-Wallpapers-4.jpg"/>
            <div class="carousel-caption" role="option">
                <p>
                   Son of Cod Seafood: The leader in industry.
                    <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://s-media-cache-ak0.pinimg.com/originals/76/bd/e0/76bde059c8e7d79e5976a507603755e9.jpg" />
            <div class="carousel-caption" role="option">
                <p>
                    Customer Service
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="http://www.charlottefive.com/wp-content/uploads/2017/02/IMG_LHessentialdishesFor_2_1_1O5I1273_L148733757.jpg" />
            <div class="carousel-caption" role="option">
                <p>
                    Quality
                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://o.aolcdn.com/images/dims?quality=100&image_uri=https%3A%2F%2Fs.aolcdn.com%2Fhss%2Fstorage%2Fmidas%2Ffd65b8542f16f963bd555c8623ad52f4%2F205045607%2Fnasa-sls-rocket-tests-2017-03-13-01-ed.jpg&client=cbc79c14efcebee57402&signature=fbc685b9936b437342ead8196872ce914d773d89" />
            <div class="carousel-caption" role="option">
                <p>
                    Inovation
                   
                </p>
            </div>
        </div>
        
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div id="form">
    
    @using (Html.BeginForm("Create", "NewsLetter"))
    {
        @Html.TextBoxFor(model => model.Email, htmlAttributes: new { placeholder = "join our newsletter" })

        <input type="submit" value="Create" />
    }

    
</div>
